{
  "compilerOptions": {
    "jsx": "react-jsx",                 // Modern React JSX transform
    "strict": true,                     // Keep strict mode for safer code
    "module": "ESNext",                 // Use modern ES modules
    "moduleResolution": "Node",         // Resolve like Node.js
    "target": "ESNext",                 // Target latest JS
    "esModuleInterop": true,            // Fixes import/export issues
    "skipLibCheck": true,               // Faster builds, skip node_modules types
    "forceConsistentCasingInFileNames": true,

    "allowJs": true,                    // ðŸ‘ˆ NEW: allow .js/.jsx files
    "checkJs": false,
    "noEmit": true                        // ðŸ‘ˆ NEW: donâ€™t type-check JS/JSX
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
